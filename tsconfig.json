{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6", "ESNext"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./src/controller/*"],
      "@service/*": ["./src/service/*"],
      "@repository/*": ["./src/repository/*"],
      "@routes/*": ["./src/routes/*"],
      "@models/*": ["./src/interface/*"],
      "@config/*": ["./src/utils/*"],
      "@middleware/*": ["./src/middleware/*"],
      "@prisma/*": ["./src/prisma/*"]
    },
    "sourceMap": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ]
}
